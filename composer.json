{
    "name": "spywsamara/slim-link",
    "description": "Link shortener by slim framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "SpyWSamara",
            "email": "spywsamara@gmail.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "php-di/php-di": "^6.2",
        "slim/psr7": "^1.1",
        "slim/slim": "4.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
